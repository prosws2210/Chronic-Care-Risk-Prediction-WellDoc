# AI Model Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
LM_STUDIO_BASE_URL=http://127.0.0.1:1234/v1
LM_STUDIO_API_KEY=lm-studio

# Model Settings
PRIMARY_MODEL=gpt-4
FALLBACK_MODEL=gpt-3.5-turbo
MAX_TOKENS=4000
TEMPERATURE=0.1

# Database Configuration
DATABASE_URL=sqlite:///chronic_care.db
MONGODB_URL=mongodb://localhost:27017/chronic_care
REDIS_URL=redis://localhost:6379/0

# Dashboard Configuration
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8080
DEBUG_MODE=True
SECRET_KEY=your_secret_key_here

# Data Configuration
SYNTHETIC_PATIENTS_COUNT=10000
DATA_GENERATION_SEED=42
MIN_HISTORY_DAYS=30
MAX_HISTORY_DAYS=180
PREDICTION_WINDOW_DAYS=90

# Model Training
TRAIN_TEST_SPLIT=0.8
VALIDATION_SPLIT=0.2
CROSS_VALIDATION_FOLDS=5
EARLY_STOPPING_PATIENCE=10

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/chronic_care.log
LOG_MAX_FILE_SIZE=10MB
LOG_BACKUP_COUNT=5

# Security
ENCRYPTION_KEY=your_encryption_key_here
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=3

# Feature Flags
ENABLE_SYNTHETIC_DATA=True
ENABLE_MODEL_EXPLANATIONS=True
ENABLE_BIAS_DETECTION=True
ENABLE_REAL_TIME_PREDICTIONS=True

ENABLE_DASHBOARD=True
ENABLE_API_ACCESS=True
ENABLE_USER_AUTHENTICATION=True
ENABLE_DATA_AUGMENTATION=True
ENABLE_HYPERPARAMETER_TUNING=True